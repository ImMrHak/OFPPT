
@{
    ViewBag.Title = "AdminResponse";
    Layout = "~/Views/MainLayout.cshtml";
    try
    {
        if (Session.Count == 0 || Session["Role"].ToString() == "ADMIN" || Session["Role"].ToString() == "DIRECTEUR")
        {
            Response.Redirect("~/Account/SignIn");
        }
    }
    catch (Exception ex)
    {

    }
}
<!-- preloader area start -->
<div id="preloader">
    <div class="loader"></div>
</div>
<!-- preloader area end -->
<!-- main wrapper start -->
<div class="horizontal-main-wrapper">
    @Html.Partial("_Header")
    <!-- main content area start -->
    <div class="main-content-inner">
        <div class="container">
            <button type="button" id="toggleModel" data-toggle="modal" data-target="#ReceivedMessage" style="display:none;"></button>
        </div>
    </div>
    <!-- main content area end -->
    @Html.Partial("_Footer")
</div>
<!-- Modal Response From Administrator-->
<div class="modal fade" id="ReceivedMessage">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">La reponse de l'administrateur</h5>
                <button type="button" onclick='window.location = "@Url.Action("ViewAllResponse", "Student")";' class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <form action="" method="POST">
                <div class="modal-body">
                    <label class="titre">Titre :</label>
                    <input type="text" class="form-control" id="titre" name="titre" value="@ViewBag.titre" disabled />
                    <label class="reponse">Reponse :</label>
                    <textarea class="form-control" id="reponse" name="reponse" disabled>@ViewBag.reponsemessage</textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick='window.location = "@Url.Action("ViewAllResponse", "Student")";' class="btn btn-secondary" data-dismiss="modal">Quitter</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Page Related Scripts-->
<script>
    window.addEventListener("load", function () {
        document.getElementById("toggleModel").click();
    });
</script>
