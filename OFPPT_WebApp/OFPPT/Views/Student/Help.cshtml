@{
    ViewBag.Title = "Demande D'Aide | OFPPT";
    Layout = "~/Views/MainLayout.cshtml";
    try
    {
        if (Session.Count == 0 || Session["Role"].ToString() == "ADMIN" || Session["Role"].ToString() == "DIRECTEUR")
        {
            Response.Redirect("~/Account/SignIn");
        }
    }
    catch (Exception ex)
    {

    }
}
<!-- preloader area start -->
<div id="preloader">
    <div class="loader"></div>
</div>
<!-- preloader area end -->
<!-- main wrapper start -->
<div class="horizontal-main-wrapper">
    @Html.Partial("_Header")
    <!-- main content area start -->
    <div class="main-content-inner">
        <div class="container">
            <form action="" method="POST">
                <h4 class="header-title">Demande d'aide</h4>
                <div class="form-group">
                    <label for="typedemandes" class="col-form-label">Type de demande :</label>
                    <select class="form-control" id="typedemandes" name="typedemandes" required>
                        <option value="0" selected>Veuillez sélectionner votre type de demande</option>
                        <option value="1">Demande d'information</option>
                        <option value="2">Reclamation</option>
                        <option value="3">Signalement de probleme technique</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="nom" class="col-form-label">Nom :</label>
                    <input type="text" class="form-control" id="nom" name="nom" value="@ViewBag.Nom" disabled required>
                </div>
                <div class="form-group">
                    <label for="prenom" class="col-form-label">Prénom :</label>
                    <input type="text" class="form-control" id="prenom" name="prenom" value="@ViewBag.Prenom" disabled required>
                </div>
                <div class="form-group">
                    <label for="cins" class="col-form-label">CIN :</label>
                    <input type="text" class="form-control" id="cins" name="cins" value="@ViewBag.CIN" disabled required>
                </div>
                <div class="form-group">
                    <label for="comments" class="col-form-label">Votre commentaire :</label>
                    <textarea class="form-control" id="comments" name="comments" required></textarea>
                </div>
                <button type="button" onclick="Checker()" class="btn btn-primary mb-3" style="float:right;width:100%;">Envoyer Ma Demande</button>
                <br />
                <br />
            </form>
        </div>
    </div>
    <!-- main content area end -->
    @Html.Partial("_Footer")
</div>
<!--Page Related Scripts-->
<script src="~/Assets/custom/studenthelp/js/script.js"></script>