@{
    ViewBag.Title = "Connexion | OFPPT";
    Layout = "~/Views/MainLayout.cshtml";
}
<!-- preloader area start -->
<div id="preloader">
    <div class="loader"></div>
</div>
<!-- preloader area end -->
<!-- login area start -->
<div class="login-area login-s2">
    <div class="container">
        <div class="login-box ptb--100">
            <form action="SignIn" method="POST">
                <div class="login-form-head">
                    <h4>Se Connecter</h4>
                </div>
                <div class="login-form-body">
                    <div class="form-gp">
                        <label for="cin">CIN</label>
                        <input type="text" id="cin" name="cin" required>
                        <i class="ti-id-badge"></i>
                        <div class="text-danger"></div>
                    </div>
                    <div class="form-gp">
                        <label for="pass">Mot de passe</label>
                        <input type="password" id="pass" name="pass" required>
                        <i class="ti-lock"></i>
                        <div class="text-danger"></div>
                    </div>
                    <div class="row mb-4 rmber-area">
                        <div class="col-6">
                            <div class="custom-control custom-checkbox mr-sm-2">
                                <input type="checkbox" class="custom-control-input" id="remember">
                                <label class="custom-control-label" for="remember">Rester connecter</label>
                            </div>
                        </div>
                        <div class="col-6 text-right">
                            <a href="#" onclick='window.location = "@Url.Action("Recover", "Account")";'>Mot de passe oublié ?</a>
                        </div>
                    </div>
                    <div class="submit-btn-area">
                        <button id="form_submit" onclick="Checker()" type="submit">Se Connecter<i class="ti-arrow-right"></i></button>
                    </div>
                    <div class="form-footer text-center mt-5">
                        <p class="text-muted">Vous n'avez pas de compte? <a href="#" onclick='window.location = "@Url.Action("SignUp", "Account")";'>Créer Un Compte</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- login area end -->
<!--Page Related Scripts-->
<script src="~/Assets/custom/signin/js/script.js"></script>